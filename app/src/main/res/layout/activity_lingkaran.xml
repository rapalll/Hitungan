<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    tools:context=".LingkaranActivity"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv_luaslingkaran"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Luas Lingkarang"
        android:textSize="24dp"
        android:layout_margin="16dp"
        android:layout_gravity="center"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_jari"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/jari_jari"
        android:layout_margin="8dp"
        android:textSize="24dp"
        android:layout_gravity="center"
        android:textStyle="bold"/>


    <EditText
        android:id="@+id/edt_jari"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:maxLines="1"
        android:lines="1"
        android:singleLine="true"
        android:hint="Masukan Angka"/>

    <TextView
        android:id="@+id/tv_hasil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hasil"
        android:textStyle="bold"
        android:textSize="24dp"
        android:layout_gravity="center"
        android:layout_margin="8dp"/>

    <EditText
        android:id="@+id/edt_hasil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hasil"
        android:maxLines="1"
        android:lines="1"
        android:singleLine="true"
        android:textStyle="bold"
        android:layout_margin="8dp"/>

    <Button
        android:id="@+id/btn_hasil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/hasil"
        android:layout_margin="8dp"
        android:background="@color/colorAccent"
        android:textStyle="bold"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/btn_clear"
        android:onClick="clear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:layout_margin="8dp"
        android:text="Clear"/>





</LinearLayout>